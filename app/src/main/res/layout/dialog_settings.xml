<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API Key"
            app:boxStrokeColor="@color/accent"
            app:hintTextColor="@color/accent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etApiKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerModel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_input_field"
            android:paddingHorizontal="12dp"
            android:popupBackground="#2a2a3e" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchThinking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extended Thinking"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/layoutBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thinking Budget (tokens)"
                app:boxStrokeColor="@color/accent"
                app:hintTextColor="@color/accent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBudgetTokens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web Search"
            android:textColor="@color/text_primary"
            android:layout_marginTop="12dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Max Tokens"
            android:layout_marginTop="16dp"
            app:boxStrokeColor="@color/accent"
            app:hintTextColor="@color/accent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMaxTokens"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="System Prompt"
            android:layout_marginTop="16dp"
            app:boxStrokeColor="@color/accent"
            app:hintTextColor="@color/accent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSystemPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</ScrollView>