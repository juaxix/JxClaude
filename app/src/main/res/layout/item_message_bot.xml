<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:paddingVertical="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="48dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/bg_message_bot"
        android:padding="12dp">

        <!-- Thinking section -->
        <LinearLayout
            android:id="@+id/thinkingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvThinkingToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§  Thinking  â–¶"
                android:textColor="#AAAACC"
                android:textSize="13sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tvThinkingContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_thinking"
                android:padding="8dp"
                android:textColor="#9999BB"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:maxLines="50"
                android:textIsSelectable="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:layout_marginTop="4dp" />

        <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_input_get"
            android:contentDescription="Copy message" />
    </LinearLayout>
</LinearLayout>